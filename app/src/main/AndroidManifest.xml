<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ricardosgobbe.manager">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".controlers.activity.ActivityLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".controlers.activity.ActivityRegisterLogin"
            android:label="Register Account">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".controlers.activity.ActivityLogin"/>
        </activity>

        <activity android:name=".controlers.activity.MainActivity"
            android:configChanges="orientation|screenSize">


        </activity>


        <activity android:name=".controlers.activity.ActivityProfiles">

        </activity>



        <activity android:name=".controlers.activity.FabMenuLayout">

        </activity>

    </application>

</manifest>
